<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_custom_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners"
    tools:ignore="RtlHardcoded,RtlSymmetry">

    <TextView
        android:id="@+id/winMsg"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/snes"
        android:gravity="center"
        android:paddingTop="18dp"
        android:paddingBottom="5dp"
        android:text="@string/win_msg"
        android:textColor="#FF0000"
        android:textSize="52sp" />

    <LinearLayout
        android:id="@+id/timeLayout"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/winMsg"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/rusq"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="@string/time_msg"
            android:textColor="#FF0000"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/timeMsg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/digital7_mono"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:textColor="#FF0000"
            android:textSize="36sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/besttimeLayout"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeLayout"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:paddingBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/rusq"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="@string/besttime_msg"
            android:textColor="#FF0000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/besttimeMsg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/digital7_mono"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:textColor="#FF0000"
            android:textSize="26sp" />

    </LinearLayout>

</RelativeLayout>